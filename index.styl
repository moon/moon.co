
@import 'nib'

global-reset()

html, body

    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    font-family: 'Montserrat', sans-serif
    text-align: center
    background: #1D2026
    overflow: hidden
    height: 100%
    color: #fff

.space
    
    background-position: center
    background-repeat: no-repeat
    background-size: 100%
    background-size: cover
    position: absolute
    opacity: 0.6
    height: 100%
    width: 100%
    left: 0
    top: 0
    
    &:after
        
        background: rgba(#000, 0.4)
        position: absolute
        content: ''
        display: block
        size: 100% 100%

.content
    
    margin-top: -160px
    position: absolute
    width: 100%
    left: 0
    top: 50%

.logo
    
    display: block
    height: 104px
    width: 100%
    fill: #fff

h1 em
    
    display: none

.caption
    
    text-transform: uppercase
    letter-spacing: 6px
    font-weight: 300
    margin-top: 64px
    font-size: 12px

.signup
    
    margin-top: 100px
    font-size: 0

    input
        
        -webkit-font-smoothing: antialiased
        -moz-osx-font-smoothing: grayscale
        font-family: 'Montserrat', sans-serif
        transition: opacity 0.33s ease-out
        font-size: 14px
        outline: none
        padding: 12px 18px
        display: inline-block
        opacity: 0.75
        border: 1px solid #fff
        margin: 0
        
        &:-webkit-autofill
            
            -webkit-box-shadow: 0 0 0px 1000px white inset
        
        &::-moz-focus-inner

            padding: 0
            border: 0 
        
        &:focus
            
            outline: none
            
    &:hover input
        
        opacity: 1

    &::-webkit-input-placeholder, &:-moz-placeholder, &::-moz-placeholder, &:-ms-input-placeholder
        
        color: #fff

    .email
        
        border-radius: 22px 0 0 22px
        text-transform: uppercase
        padding-right: 0
        border-right: none
        background: transparent
        width: 220px
        color: #fff

    .button
        
        border-radius: 0 22px 22px 0
        text-transform: uppercase
        letter-spacing: 0.033em
        // margin-left: -1px
        background: #fff
        cursor: pointer
        
.mce_inline_error
    
    text-transform: uppercase
    margin-top: 20px
    font-size: 12px

/* Animation */

@keyframes fade-in
    0% { opacity: 0; }
    100% { opacity: 1; }
    
@keyframes scale-in
    0% { transform: scale(1) rotate(3deg); opacity: 0; }
    100% { transform: scale(1.15) rotate(-1deg); opacity: 1; }
    
@keyframes slide-in
    0% { transform: translateY(10px); opacity: 0; }
    100% { transform: translateY(0px); opacity: 1; }
    
.space

    opacity: 0
    
    &.animate
        
        animation: scale-in 12s ease-out 0s forwards
    
.logo
    
    animation: fade-in 3s ease-in-out 1s forwards
    opacity: 0
    
.caption
    
    animation: fade-in 1.5s ease-in-out 2.4s forwards
    opacity: 0
    
.signup
    
    animation: slide-in 1.6s ease-in-out 4.1s forwards
    opacity: 0
    
// Breakpoints

@media only screen and (max-width: 600px)

    .content
        
        margin-top: -120px

    .logo
        
        height: 72px
        
    .caption
        
        font-size: 11px

    .signup
        
        margin-top: 60px
        
        input
            
            font-size: 12px
        
        .email
            
            width: 200px